# D-Point Demo Environment Variables
# This file contains environment variables for the D-Point peer recognition platform demo

# Application Configuration
NEXT_PUBLIC_APP_NAME=D-Point
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION="Peer Recognition Platform"

JWT_SECRET=dpoint-jwt-secret-key-for-demo-authentication-2024

# Demo Mode Configuration
NEXT_PUBLIC_DEMO_MODE=true
NEXT_PUBLIC_ENABLE_MOCK_API=true

# Authentication Configuration (Demo)
NEXT_PUBLIC_AUTH_PROVIDER=demo
NEXTAUTH_SECRET=demo-secret-key-for-dpoint-application-2024
NEXTAUTH_URL=http://localhost:3000

# Demo User Credentials
NEXT_PUBLIC_DEMO_ADMIN_EMAIL=admin@dpoint.demo
NEXT_PUBLIC_DEMO_ADMIN_PASSWORD=Admin123!
NEXT_PUBLIC_DEMO_EMPLOYEE_EMAIL=employee@dpoint.demo
NEXT_PUBLIC_DEMO_EMPLOYEE_PASSWORD=Employee123!

# Database Configuration (Demo - using local storage)
DATABASE_URL=demo://localhost/dpoint
NEXT_PUBLIC_USE_LOCAL_STORAGE=true

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api
NEXT_PUBLIC_API_TIMEOUT=10000

# Feature Flags
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_REWARDS=true
NEXT_PUBLIC_ENABLE_LEADERBOARD=true

# Demo Data Configuration
NEXT_PUBLIC_DEMO_USERS_COUNT=50
NEXT_PUBLIC_DEMO_TRANSACTIONS_COUNT=200
NEXT_PUBLIC_DEMO_REWARDS_COUNT=20

# Coin System Configuration
NEXT_PUBLIC_DEFAULT_MONTHLY_ALLOCATION=100
NEXT_PUBLIC_MAX_COINS_PER_TRANSACTION=50
NEXT_PUBLIC_MIN_COINS_PER_TRANSACTION=1

# Rewards System Configuration
NEXT_PUBLIC_REWARD_REDEMPTION_ENABLED=true
NEXT_PUBLIC_MIN_POINTS_FOR_REDEMPTION=10

# UI Configuration
NEXT_PUBLIC_THEME=dpoint
NEXT_PUBLIC_PRIMARY_COLOR=#6B46C1
NEXT_PUBLIC_SECONDARY_COLOR=#8B5CF6
NEXT_PUBLIC_ACCENT_COLOR=#A78BFA

# Development Configuration
NODE_ENV=development
NEXT_PUBLIC_DEBUG=true
NEXT_PUBLIC_SHOW_DEMO_BANNER=true

# External Services (Demo - disabled)
NEXT_PUBLIC_ENABLE_EMAIL_NOTIFICATIONS=false
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=false
NEXT_PUBLIC_ENABLE_SMS_NOTIFICATIONS=false

# Analytics (Demo)
NEXT_PUBLIC_ANALYTICS_ENABLED=false
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_MIXPANEL_TOKEN=

# File Upload Configuration (Demo)
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Rate Limiting (Demo)
NEXT_PUBLIC_RATE_LIMIT_ENABLED=false
NEXT_PUBLIC_RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Security Configuration (Demo)
NEXT_PUBLIC_ENABLE_CSRF_PROTECTION=false
NEXT_PUBLIC_ENABLE_RATE_LIMITING=false
NEXT_PUBLIC_ENABLE_IP_WHITELIST=false

# Demo Company Information
NEXT_PUBLIC_COMPANY_NAME="Demo Company"
NEXT_PUBLIC_COMPANY_LOGO="/images/demo-logo.png"
NEXT_PUBLIC_COMPANY_WEBSITE="https://demo.dpoint.com"

# Demo Contact Information
NEXT_PUBLIC_SUPPORT_EMAIL=support@dpoint.demo
NEXT_PUBLIC_SUPPORT_PHONE=+1-555-DPOINT
NEXT_PUBLIC_SUPPORT_HOURS="9 AM - 5 PM EST"

# Demo Social Links
NEXT_PUBLIC_SOCIAL_TWITTER=https://twitter.com/dpoint_demo
NEXT_PUBLIC_SOCIAL_LINKEDIN=https://linkedin.com/company/dpoint-demo
NEXT_PUBLIC_SOCIAL_FACEBOOK=https://facebook.com/dpoint.demo

# Deployment Configuration
NEXT_PUBLIC_DEPLOYMENT_ENV=demo
NEXT_PUBLIC_BUILD_TIME=2024-01-01T00:00:00Z
NEXT_PUBLIC_COMMIT_SHA=demo-commit-hash
